#!/bin/bash -eux
# c99sh test driver relying upon c99shrc in the same directory
cd "${0%/*}"

./hello

./oneliner

./heredoc


# Build
rm -f ./a.out
gcc ./shebang.c
# No arguments
./a.out
./shebang.c
# Some arguments
./a.out Foo Bar
./shebang.c Foo Bar
# Cleanup
rm a.out

../c99sh -vv -x a.out shebang.c
./a.out
rm a.out

./quicktest.c
gcc -c ./quicktest.c
rm ./quicktest.o
